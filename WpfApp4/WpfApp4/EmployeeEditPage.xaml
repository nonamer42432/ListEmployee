<Page x:Class="WpfApp4.EmployeeEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp4"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EmployeeEditPage">

    <Grid Margin="20">
        <StackPanel Background="White">
            <TextBlock Text="Редактировать сотрудника" FontSize="24" Margin="0,0,0,20"/>
            <TextBlock Text="Имя:"/>
            <TextBox Name="NameTextBox" Margin="0,0,0,10"/>
            <TextBlock Text="Должность:"/>
            <TextBox Name="PositionTextBox" Margin="0,0,0,20"/>
            <Button Content="Сохранить изменения" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
